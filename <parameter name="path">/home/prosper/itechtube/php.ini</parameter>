<parameter name="content">; Custom PHP Configuration for Video Uploads
; This increases upload limits to support chunked uploads up to 500MB

; Maximum size of POST data that PHP will accept.
; Set to 500MB to allow large chunk uploads
post_max_size = 500M

; Maximum allowed size for uploaded files.
; Set to 500MB to allow large video files
upload_max_filesize = 500M

; Maximum amount of memory a script may consume
; Set to 256MB for video processing
memory_limit = 256M

; Maximum execution time of each script, in seconds
; Set to 600 seconds (10 minutes) for large uploads
max_execution_time = 600

; Maximum amount of time each script may spend parsing request data
; Set to 600 seconds (10 minutes) for large uploads
max_input_time = 600

; Maximum number of files that can be uploaded in a single request
max_file_uploads = 20
</parameter>
